// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String   @id @default(uuid())
  title      String
  created_at DateTime

  dayHabits DayHabit[]
  weekDays  HabitWeekDay[]

  @@map("habits") // Nome da tabela no banco
}

model HabitWeekDay {
  id       String @id @default(uuid())
  habit_id String
  week_day Int

  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day]) // Índices
  @@map("habit-week-days") // Nome da tabela no banco
}

model Day {
  id   String   @id @default(uuid())
  date DateTime

  dayHabits DayHabit[] // Algo que manipula o prisma e não cria tabelas

  @@unique([date]) // Índice
  @@map("days") // Nome da tabela no banco
}

model DayHabit {
  id String @id @default(uuid())

  day_id   String
  habit_id String

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id]) // Índices
  @@map("day_habits") // Nome da tabela no banco
}
